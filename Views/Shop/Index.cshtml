@model ShopeeViewModel

@{
    Layout = "_MallLayout";
    ViewData["Title"] = "Shop";
}

<link rel="stylesheet" href="~/css/shop.css">
<div class="app__container hide-on-table">
    <div class="shop__mobile hide-on-destop">
        <div class="shop__mobile-detail">

        </div>
        <div class="shop__mobile-header">
            <div class="shop__mobile-title-list">
                <div class="shop__mobile-title-item">
                    Shop
                </div>
                <div class="shop__mobile-title-item active">
                    Sản phẩm
                </div>
                <div class="shop__mobile-title-item">
                    Danh mục
                </div>
            </div>
            <ul class="header__sort-bar">
                <li class="header__sort-item">
                    <a href="" class="header__sort-link">Liên quan</a>
                </li>
                <li class="header__sort-item header__sort-item--active">
                    <a href="" class="header__sort-link">Mới nhất</a>
                </li>
                <li class="header__sort-item">
                    <a href="" class="header__sort-link">Bán chạy</a>
                </li>
                <li class="header__sort-item">
                    <a href="javascript:tonglePrice()" class="header__sort-link active">
                        <span>Giá</span>
                        <i class="uil uil-direction header__sort-link-icon"></i>
                        <!-- <i class="uil uil-arrow-up header__sort-link-icon"></i> -->
                    </a>
                </li>
            </ul>
        </div>
        <div class="shop__mobile-shop hide-on-mobile">
            <div class="shop__mobile-description">
                
            </div>
            <div class="shop__mobile-shop-selling">
                <div class="shop__mobile-shop-selling-title">Sản phẩm bán chạy</div>
                <div class="shop__mobile-shop-selling-list">
                    
                </div>
                <div class="shop__mobile-shop-view-more">
                    <a href="javascript:openViewMoreModal()" class="shop__mobile-shop-view-more-link">
                        <span>Xem tất cả</span>
                        <i class="uil uil-angle-right-b shop__mobile-shop-view-more-icon"></i>
                    </a>
                </div>
                <div class="shop__mobile-shop-view-more-modal">
                    <div class="shop__mobile-shop-view-more-modal-header">
                        <i class="uil uil-arrow-left shop__mobile-shop-view-more-modal-header-icon"
                            onclick="closeViewMoreModal()"></i>
                        <div class="shop__mobile-shop-view-more-modal-header-sub">Sản phẩm bán chạy</div>
                    </div>
                    <div class="shop__mobile-shop-view-more-modal-body">
                        <div class="shop__mobile-shop-view-more-modal-body-header">
                            <div class="shop__mobile-shop-view-more-modal-body-title active">Bán chạy nhất</div>
                            <div class="shop__mobile-shop-view-more-modal-body-title">Giá tốt nhất</div>
                        </div>
                        <div class="shop__mobile-shop-view-more-modal-body-product-selling">
                            
                        </div>
                        <div class="shop__mobile-shop-view-more-modal-body-product-good-price hide-on-mobile">
                            
                        </div>
                    </div>
                </div>
            </div>
            <div class="shop__mobile-shop-category">
                <div class="success-header">
                    <div class="success-title">Danh mục</div>
                </div>
                <div class="shop__mobile-shop-category-list">
                    <div class="shop__mobile-shop-category-item-1">

                    </div>
                    <div class="shop__mobile-shop-category-item-2">
                        
                    </div>
                    <div class="shop__mobile-shop-category-item-3">
                        
                    </div>
                    
                </div>
            </div>
            <div class="shop__mobile-shop-success">
                <div class="success-header">
                    <div class="success-title">Gợi ý cho bạn</div>
                </div>
                <div class="home-product">
                    <!--Grid -> Row -> Column-->
                    <div class="row sm-gutter home-product__list">
                        <!--Product item-->

                    </div>
                </div>
            </div>
        </div>
        <div class="shop__mobile-product">
            <div class="home-product">
                <div class="row sm-gutter home-product__list">
                    <!--Product item-->

                </div>
            </div>
            <ul class="pagination home-product__pagination">
                @* <li class="pagination-item">
                <a href="" class="pagination-item__link">...</a>
                </li> *@
            </ul>
        </div>
        <div class="shop__mobile-category hide-on-mobile">
            
        </div>
    </div>
    <div class="shop hide-on-mobile">
        <div class="shop__header">
            <div class="shop__header-container">
                <div class="shop__header-column">
                    <div class="shop__header-detail">
                        
                    </div>
                </div>
                <div class="shop__header-column">
                    <div class="shop__header-row">
                        <i class="uil uil-store shop__header-row-icon"></i>
                        Sản phẩm:
                        <span>142</span>
                    </div>
                    <div class="shop__header-row">
                        <i class="uil uil-user-plus shop__header-row-icon"></i>
                        Đang theo dõi:
                        <span>100</span>
                    </div>
                    <div class="shop__header-row">
                        <i class="uil uil-comment-alt-dots shop__header-row-icon"></i>
                        Tỉ lệ phản hồi chat:
                        <span>100% (Trong vài giờ)</span>
                    </div>
                </div>
                <div class="shop__header-column">
                    <div class="shop__header-row">
                        <i class="uil uil-users-alt shop__header-row-icon"></i>
                        Người theo dõi:
                        <span>2.4k</span>
                    </div>
                    <div class="shop__header-row">
                        <i class="uil uil-star shop__header-row-icon"></i>
                        Đánh giá:
                        <span>4.6 (23,8k Đánh giá)</span>
                    </div>
                    <div class="shop__header-row">
                        <i class="uil uil-user-check shop__header-row-icon"></i>
                        Tham gia:
                        <span>5 năm trước</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="grid wide">
        <div class="shop__info hide-on-mobile">
            <div class="shop__info-title">Thông tin shop</div>
            <div class="shop__info-container">
                <div class="shop__info-slider">
                    <div class="shop__info-slider-list">
                        
                    </div>
                    <div class="shop__info-slider-dot">
                        <!-- <span class="active"></span>
                                <span></span>
                                <span></span> -->
                    </div>
                    <div class="shop__info-slider-arrow">
                        <i class="uil uil-angle-left  shop__info-slider-arrow-prev"></i>
                        <i class="uil uil-angle-right shop__info-slider-arrow-next"></i>
                    </div>
                </div>
                <div class="shop__info-desc">
                    
                </div>
            </div>
        </div>
        <div class="row sm-gutter app__content">
            <div class="col l-2 m-0 c-0">
                <nav class="product-category">
                    <h3 class="product-category__heading">
                        <i class="category__heading-icon fa-solid fa-list"></i>
                        Danh mục
                    </h3>

                    <ul class="category-list">
                        
                    </ul>
                </nav>
            </div>
            <div class="col l-10 m-12 c-0">
                <div class="home-filter hide-on-mobile-table">
                    <span class="home-filter__label">Sắp xếp theo</span>
                    <button class="home-filter__btn btn" onclick="noticeIncompleteFunc()">Phổ biến</button>
                    <button class="home-filter__btn btn btn--primary">Mới nhất</button>
                    <button class="home-filter__btn btn" onclick="noticeIncompleteFunc()">Bán chạy</button>
                    <div class="select-input">
                        <span class="select-input__label">
                            Giá
                        </span>
                        <i class="select-input-icon fa-solid fa-chevron-down"></i>

                        <!--List options-->
                        <ul class="select-input__list">
                            <li class="select-input__item">
                                <a href="javascript:sortPrice('asc')" class="select-input__link">Giá: Thấp đến cao</a>
                            </li>
                            <li class="select-input__item">
                                <a href="javascript:sortPrice('desc')" class="select-input__link">Giá: Cao đến thấp</a>
                            </li>
                        </ul>
                    </div>
                    <div class="home-filter__page">
                        <span class="home-filter__page-num">
                            <span class="home-filter__page-current">1</span>
                            /
                            14
                        </span>
                        <div class="home-filter__page-control">
                            <a href="#" class="home-filter__page-btn home-filter__page-btn--disabled "><i
                                    class=" home-filter__page-icon fas fa-angle-left"></i></a>
                            <a href="javascript:noticeIncompleteFunc()" class="home-filter__page-btn"><i
                                    class="home-filter__page-icon fas fa-angle-right"></i></a>
                        </div>
                    </div>
                </div>
                
                <div class="home-product hide-on-mobile">
                    <!--Grid -> Row -> Column-->
                    <div class="row sm-gutter home-product__list">
                        <!--Product item-->

                    </div>
                </div>
                <ul class="pagination home-product__pagination hide-on-mobile">
                    @* <li class="pagination-item">
                        <a href="" class="pagination-item__link">...</a>
                    </li> *@
                </ul>
            </div>
        </div>
    </div>
</div>
<script src="~/js/shop.js"></script>



